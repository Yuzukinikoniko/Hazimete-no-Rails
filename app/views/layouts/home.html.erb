<!DOCTYPE html>
<html>
  <head>
    <title>RailsApp3</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= @turbo==1 ? javascript_importmap_tags : "" %>
  </head>

  <body>
  <div class="content">
    <div class="content__inner">
        <div class="menu">
            <div class="menu__inner">
                <div class="account"><a href="home_user" ><%= @name %>さん</a></div>
                <div class="time"><p><%=  @time.year%>年<%=  @time.month%>月<%=  @time.day%>日</p></div>
                <div class="logout"><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }  %></div>
                <%= yield :menu %>
            </div>
        </div>
        <div class="main">
            <div class="main__inner">
            <h1><%= yield :title %></h1>
                <%= yield %>
            </div>
        </div>
    </div>
   </div>
  </body>
</html>
